{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "no-underscore-dangle": "off",
    "max-len": "off",
    "func-names": "off",
    "comma-dangle": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-continue": "off",
    "prefer-destructuring": [
      "error",
      {
        "object": true,
        "array": false
      }
    ],
    "operator-linebreak": [
      "error",
      "after"
    ]
  }
}
