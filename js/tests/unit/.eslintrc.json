{
  "env": {
    "es6": false,
    "jquery": true,
    "qunit": true,
    "browser": true
  },
  "globals": {
    "bootstrap": false,
    "sinon": false,
    "Util": false,
    "Data": false,
    "Alert": false,
    "Button": false,
    "Carousel": false,
    "Simulator": false,
    "Toast": false,
    "EventHandler": false,
    "Manipulator": false,
    "SelectorEngine": false
  },
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script"
  },
  "extends": "airbnb-base/legacy",
  "rules": {
    "semi": ["error", "never"],
    "no-underscore-dangle": "off",
    "max-len": "off",
    "func-names": "off",
    "comma-dangle": "off",
    "no-console": "error",
    "no-var": "off",
    "prefer-arrow-callback": "off",
    "object-shorthand": "off",
    "prefer-template": "off",

    // Best Practices
    "consistent-return": "off",
    "no-magic-numbers": "off",
    "vars-on-top": "off",

    // Stylistic Issues
    "func-style": "off",
    "spaced-comment": "off"
  }
}
